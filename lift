    post:
      summary: Authorize transaction
      description: Resource used to authorize a transaction.
      operationId: AuthorizeTransaction
      requestBody:
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/TransactionRequest'
        required: true
      tags:
        - Transaction
      responses:
        "200":
